

<p id="notice"><%= notice %></p>

<h1>Listing Barters</h1>

<table>
  <thead>
    <tr>
      <th>Product </th>
      <th>Description</th>
      <th>Category</th>
      <th>Expiration</th>
      <th>Neighborhood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barters.each do |barter| %>
      <tr>
        <td><%= barter.product %></td>
        <td><%= barter.description %></td>
        <td><%= barter.category %></td>
        <td><%= barter.expiration %></td>
        <td><%= barter.neighborhood %></td>
        <td><%= link_to 'Show', barter %></td>
        <td><%= link_to 'Edit', edit_barter_path(barter) %></td>
        <td><%= link_to 'Destroy', barter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

