

<p id="notice"><%= notice %></p>


<h1>University Heights Listings</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product </th>
      <th>Description</th>
      <th>Category</th>
      <th>Neighborhood</th>
      <th>Interested In</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barters.each do |barter| %>
      <tr>
        <td><%= link_to image_tag(barter.image.url(:small)), barter.image.url %></td>
        <td><%= barter.product %></td>
        <td><%= barter.description %></td>
        <td><%= barter.category %></td>
        <td><%= barter.neighborhood.capitalize %></td>
        <td><%= barter.interested_in %></td>
        <td><%= barter.expiration %></td>
        <td><%= link_to 'Edit', edit_barter_path(barter) %></td>
        <td><%= link_to 'Destroy', barter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

