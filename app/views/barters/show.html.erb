<table class="table table-hover">
  <thead>
    <tr>
      <th>Offers</th>
    </tr>
    <tr>
      <th></th>
      <th></th>
      <th>Id</th>
      <th>User</th>
      <th>Message</th>
      <th>Message Timestamp</th>
    </tr>
  </thead>
  <tbody>
    <% @barter.comments.each do |comment| %>
    <tr>
      <% next if comment.accept == false %>
      <td><%= button_to 'Accept', comment_accept_barter_comments_path(@barter.id, comment.id), method: :post %></td>
      <td><%= button_to 'Decline', comment_decline_barter_comments_path(@barter.id, comment.id), method: :post %></td>
        <!-- <td><input type="button" value="Accept" name="accept_button"/></td>
        <td><input type="button" value="Decline" name="decline_button"/></td> -->
      <td><%= comment.id %></td>
      <td><%= comment.user.email %></td>
      <td><%= comment.comment %></td>
      <td><%= comment.created_at.to_formatted_s(:long_ordinal)  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

</br>

