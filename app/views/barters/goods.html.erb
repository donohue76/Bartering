
<p id="notice"><%= notice %></p>
<!--This displays an aggregated table of all the goods created
-->
<h1>Listings of Goods</h1>
<!--Creates the table headings html
-->
<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product</th>
      <th>Description</th>
      <th>Category</th>
      <th>Neighborhood</th>
      <th>Interested In</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<!--pulls the data from the database table to be displayed in the above table
-->
  <tbody>
    <% @barters.each do |barter| %>
      <tr>
        <% if barter.image_file_name %>
          <td><%= link_to image_tag(barter.image.url(:small)), barter.image.url %></td>
        <% else %>
          <td>No Image</td>
        <% end %>
        <td><%= barter.product %></td>
        <td><%= barter.description %></td>
        <td><%= barter.category %></td>
        <td><%= barter.neighborhood.capitalize %></td>
        <td><%= barter.interested_in %></td>
        <td><%= barter.expiration %></td>
        <td><%= link_to 'Select', barter_path(barter) %></td>
    <% end %>
  </tbody>
</table>

<br>
<!--Links to the the 'New Barter form to create a new item to trade'
-->

<%= link_to 'New Barter', new_barter_path %>
