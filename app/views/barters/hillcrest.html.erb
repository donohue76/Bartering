<!--Displays all the barters that were created using the 'Hillcrest' neighborhood
-->
<p id="notice"><%= notice %></p>


<h1>Hillcrest Listings</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Product </th>
      <th>Description</th>
      <th>Category</th>
      <th>Neighborhood</th>
      <th>Interested In</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barters.each do |barter| %>
      <tr>
        <td><%= barter.product %></td>
        <td><%= barter.description %></td>
        <td><%= barter.category %></td>
        <td><%= barter.neighborhood.capitalize %></td>
        <td><%= barter.interested_in %></td>
        <td><%= barter.expiration %></td>
        <td><%= link_to 'Select', barter_path(barter) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Barter', new_barter_path %>
