<!--Form used to create a new item to barter-->

<%= form_for(@barter) do |f| %>
  <% if @barter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@barter.errors.count, "error") %> prohibited this barter from being saved:</h2>

      <ul>
      <% @barter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<!--bootstap form for creating new barter items -->
<div class="bootstrap-iso">
 <div class="container-fluid">
  <div class="row" id="formbackground">
   <div class="col-md-6 col-sm-6 col-xs-12">
    <div class="formden_header">
     <p>
     </p>
    </div>
    <form action="https://formden.com/post/wWHGqJyG/" method="post">
     <div class="form-group ">
      <label class="control-label requiredField" for="name">
       Product
       <span class="asteriskField">
        *
       </span>
      </label>
      <input class="form-control" id="name" name="barter[product]" placeholder="Enter good or service here" type="text"/>
     </div>
     <div class="form-group ">
      <label class="control-label requiredField" for="textarea">
       Description
       <span class="asteriskField">
        *
       </span>
      </label>
      <textarea class="form-control" cols="40" id="textarea" name="barter[description]" placeholder="describe your good or service" rows="10"></textarea>
     </div>
     <div class="form-group" id="div_radio">
      <label class="control-label requiredField" for="radio">
       Select a Choice
       <span class="asteriskField">
        *
       </span>
      </label>
      <div class="">
       <label class="radio-inline">
        <input name="barter[category]" type="radio" value="Services"/>
        Services
       </label>
       <label class="radio-inline">
        <input name="barter[category]" type="radio" value="Goods"/>
        Goods
       </label>
      </div>
     </div>
     <div class="form-group ">
      <label class="control-label requiredField" for="select">
       Neighborhood
       <span class="asteriskField">
        *
       </span>
      </label>
      <select class="select form-control" id="select" name="barter[neighborhood]">
       <option value="hillcrest">
        Hillcrest
       </option>
       <option value="little italy">
        Little Italy
       </option>
       <option value="university heights">
        University Heights
       </option>
       <option value="kensington">
        Kensington
       </option>
       <option value="north park">
        North Park
       </option>
      </select>
     </div>
     <div class="form-group ">
      <label class="control-label " for="date">
       Expiration Date
      </label>
      <input class="form-control" id="date" name="barter[expiration]" placeholder="MM/DD/YYYY" type="text"/>
      <span class="help-block" id="hint_date">
       Set an expiration date for your goods or services. Your post will be automatically removed if still active on this date. For perishable goods, please indicate how long this good will remain fresh before spoiling.
      </span>
     </div>
     <div class="form-group">
      <div>

       <button class="btn btn-default " id="newbarter" name="submit" type="submit">
        Submit
       </button>
       <br/>
      </div>
     </div>
    </form>
   </div>
  </div>
 </div>
</div>
<% end %>
